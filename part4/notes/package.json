{
  "name": "part3-notes",
  "version": "0.0.1",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd ../../part2/notes/ && pnpm build --prod && cp -r build ../../part4/notes/",
    "deploy": "git push heroku main",
    "deploy:full": "pnpm build:ui && git add . && git commit -m \"ci: build ui\" && pnpm deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --verbose --runInBand"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^12.0.3",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.1.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2"
  }
}
